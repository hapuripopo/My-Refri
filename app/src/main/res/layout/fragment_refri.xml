<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RefriFragment">


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:text="버튼을 클릭해주세요"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgRefri"
        android:layout_width="0dp"
        android:layout_height="461dp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        android:src="@drawable/refri_samsung"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/txtFridge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="#FFFFFF"
        android:text="냉장실"
        android:textAppearance="@style/customfontstyle_round"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnHomeBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtFresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="143dp"
        android:background="#FFFFFF"
        android:text="신선칸"
        android:textAppearance="@style/customfontstyle_round"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgRefri"
        app:layout_constraintStart_toStartOf="@+id/txtFridge" />

    <ImageButton
        android:id="@+id/btnHomeBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="142dp"
        android:background="@android:color/transparent"
        android:src="@drawable/plusbutton2"
        app:layout_constraintBottom_toTopOf="@+id/btnFresh"
        app:layout_constraintEnd_toEndOf="@+id/imgRefri"
        app:layout_constraintTop_toTopOf="@+id/imgRefri" />

    <TextView
        android:id="@+id/txtHomeBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="홈바"
        android:textAppearance="@style/customfontstyle_round"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnHomeBar"
        app:layout_constraintStart_toStartOf="@+id/btnHomeBar" />

    <TextView
        android:id="@+id/txtFreezer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="31dp"
        android:text="냉동실"
        android:textAppearance="@style/customfontstyle_round"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/txtFridge"
        app:layout_constraintStart_toStartOf="@+id/imgRefri" />

    <ImageButton
        android:id="@+id/btnFridge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@android:color/transparent"
        android:src="@drawable/plusbutton2"
        app:layout_constraintStart_toStartOf="@+id/txtFridge"
        app:layout_constraintTop_toBottomOf="@+id/txtFridge" />

    <ImageButton
        android:id="@+id/btnFresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="1dp"
        android:background="@android:color/transparent"
        android:src="@drawable/plusbutton2"
        app:layout_constraintStart_toStartOf="@+id/txtFresh"
        app:layout_constraintTop_toBottomOf="@+id/txtFresh" />

    <ImageButton
        android:id="@+id/btnFreezer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@android:color/transparent"
        android:src="@drawable/plusbutton2"
        app:layout_constraintStart_toStartOf="@+id/txtFreezer"
        app:layout_constraintTop_toBottomOf="@+id/txtFreezer" />

</androidx.constraintlayout.widget.ConstraintLayout>